---
import { SocialMedia } from '../Intro/SocialMedia';
import homepagePhoto from '../../../public/image-1.png';
---

<section
	class="min-h-screen text-white w-full flex justify-center items-center flex-col-reverse lg:flex-row lg:justify-between"
>
	<div
		class="text-2xl lg:text-5xl font-bold leading-[70px] flex flex-col text-center lg:text-left"
		style={{ fontFamily: '"Noto Serif SC",serif' }}
	>
		<h1>Check it out !</h1>
		<!-- <span>Life is a Journey</span> -->
		<h1 class="inline-block lg:mt-4">参与世界的变化 🌍</h1>
		<SocialMedia client:load className="mt-10 gap-4 pl-0 mx-auto lg:mx-0 lg:mt-10" />
	</div>
	<img src={homepagePhoto.src} class="rounded-3xl w-[300px]" />
</section>
