---
import type { IDiary, BookMetadata, MovieMetadata, LinkMetadata } from '@/types/diary';
import { DiaryType } from '@/types/diary';
import dayjs from 'dayjs';

const { diary } = Astro.props as { diary: IDiary };
const formattedDate = dayjs(diary.date).format('YYYY/MM/DD');

// ç±»åž‹å›¾æ ‡æ˜ å°„
const typeIcons: Record<DiaryType, string> = {
	[DiaryType.TEXT]: '',
	[DiaryType.BOOK]: 'ðŸ“š',
	[DiaryType.MOVIE]: 'ðŸŽ¬',
	[DiaryType.LINK]: 'ðŸ”—',
	[DiaryType.MUSIC]: 'ðŸŽµ',
	[DiaryType.PHOTO]: 'ðŸ“·',
};

// æ¸²æŸ“æ˜Ÿçº§è¯„åˆ†
const renderStars = (rating?: number) => {
	if (!rating) return '';
	return 'â˜…'.repeat(rating) + 'â˜†'.repeat(5 - rating);
};
---

<a
	href={`/diary/detail/${diary.id}`}
	class="diary-card relative rounded-lg border border-gray-700/50 hover:border-gray-600 bg-slate-800/50 hover:bg-slate-800/70 backdrop-blur-sm transition-all duration-300 p-6 group block"
>
	<!-- ç±»åž‹å›¾æ ‡ (å·¦ä¸Šè§’) -->
	{
		typeIcons[diary.type] && (
			<div class="absolute top-4 left-4 text-xl opacity-70">{typeIcons[diary.type]}</div>
		)
	}

	<!-- Pin å›¾æ ‡ (å³ä¸Šè§’) -->
	{
		diary.pin && (
			<div class="absolute top-4 right-4">
				<img
					src="/svg/pin.svg"
					alt="pinned"
					class="w-5 h-5 stroke-amber-400 fill-amber-400"
				/>
			</div>
		)
	}

	<!-- å¤´éƒ¨: å¤´åƒ + ä½œè€… + æ—¥æœŸ -->
	<div class="flex items-start justify-between gap-4 mt-2">
		<div class="flex items-center gap-3 flex-1">
			<img src={diary.avatar} alt={diary.author} class="w-10 h-10 rounded-full object-cover border border-gray-600" />
			<div class="flex-1 min-w-0">
				<div class="text-white font-medium truncate">{diary.author}</div>
				<div class="text-gray-400 text-sm">{formattedDate}</div>
			</div>
		</div>
	</div>

	<!-- Metadata åŒºåŸŸ (æ ¹æ®ç±»åž‹æ˜¾ç¤ºä¸åŒå†…å®¹) -->
	{
		diary.type === DiaryType.BOOK && diary.metadata && (
			<div class="mt-4 p-4 rounded-lg bg-sky-900/20 border border-sky-700/30">
				<div class="flex gap-4">
					{(diary.metadata as BookMetadata).coverImage && (
						<img
							src={(diary.metadata as BookMetadata).coverImage}
							alt="book cover"
							class="w-16 h-24 object-cover rounded"
						/>
					)}
					<div class="flex-1 min-w-0">
						<div class="text-white font-semibold text-lg truncate">
							{(diary.metadata as BookMetadata).bookTitle}
						</div>
						<div class="text-gray-300 text-sm mt-1">
							{(diary.metadata as BookMetadata).bookAuthor}
						</div>
						{(diary.metadata as BookMetadata).rating && (
							<div class="text-amber-400 text-sm mt-2">
								{renderStars((diary.metadata as BookMetadata).rating)}
							</div>
						)}
					</div>
				</div>
			</div>
		)
	}

	{
		diary.type === DiaryType.MOVIE && diary.metadata && (
			<div class="mt-4 p-4 rounded-lg bg-purple-900/20 border border-purple-700/30">
				<div class="flex gap-4">
					{(diary.metadata as MovieMetadata).posterImage && (
						<img
							src={(diary.metadata as MovieMetadata).posterImage}
							alt="movie poster"
							class="w-16 h-24 object-cover rounded"
						/>
					)}
					<div class="flex-1 min-w-0">
						<div class="text-white font-semibold text-lg truncate">
							{(diary.metadata as MovieMetadata).movieTitle}
						</div>
						<div class="text-gray-300 text-sm mt-1">
							å¯¼æ¼”: {(diary.metadata as MovieMetadata).director}
						</div>
						<div class="flex items-center gap-2 mt-2 text-sm text-gray-400">
							{(diary.metadata as MovieMetadata).year && (
								<span>{(diary.metadata as MovieMetadata).year}</span>
							)}
							{(diary.metadata as MovieMetadata).rating && (
								<span class="text-amber-400">
									{renderStars((diary.metadata as MovieMetadata).rating)}
								</span>
							)}
						</div>
					</div>
				</div>
			</div>
		)
	}

	{
		diary.type === DiaryType.LINK && diary.metadata && (
			<div class="mt-4 p-4 rounded-lg bg-green-900/20 border border-green-700/30 hover:bg-green-900/30 transition-colors">
				<div class="flex items-start gap-3">
					{(diary.metadata as LinkMetadata).favicon && (
						<img
							src={(diary.metadata as LinkMetadata).favicon}
							alt="favicon"
							class="w-5 h-5 mt-1"
						/>
					)}
					<div class="flex-1 min-w-0">
						<div class="text-white font-semibold truncate">
							{(diary.metadata as LinkMetadata).linkTitle}
						</div>
						{(diary.metadata as LinkMetadata).linkDescription && (
							<div class="text-gray-300 text-sm mt-1 line-clamp-2">
								{(diary.metadata as LinkMetadata).linkDescription}
							</div>
						)}
						<div class="text-gray-500 text-xs mt-2 truncate">
							{(diary.metadata as LinkMetadata).url}
						</div>
					</div>
				</div>
			</div>
		)
	}

	<!-- å†…å®¹ -->
	<div class="mt-4 text-gray-200 text-sm leading-relaxed line-clamp-3">
		{diary.content}
	</div>

	<!-- å›¾ç‰‡åº“ -->
	{
		diary.images && diary.images.length > 0 && (
			<div class="mt-4 grid grid-cols-2 md:grid-cols-3 gap-3 max-h-80 overflow-hidden">
				{diary.images.slice(0, 6).map((image) => (
					<div class="aspect-square rounded-lg overflow-hidden hover:scale-105 transition-transform duration-200">
						<img
							src={image}
							alt="diary image"
							loading="lazy"
							class="w-full h-full object-cover"
						/>
					</div>
				))}
			</div>
		)
	}

	<!-- æ ‡ç­¾ -->
	{
		diary.tags && diary.tags.length > 0 && (
			<div class="mt-4 flex flex-wrap gap-2">
				{diary.tags.map((tag) => (
					<span class="inline-block px-2 py-1 text-xs rounded-md bg-sky-900/40 text-sky-200">
						{tag}
					</span>
				))}
			</div>
		)
	}

	<!-- åº•éƒ¨: äº’åŠ¨æ•°æ® -->
	<div class="mt-4 pt-4 border-t border-gray-700/30 flex gap-4 text-xs text-gray-400">
		<span class="flex items-center gap-1">
			<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
				<path
					d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
				></path>
			</svg>
			{diary.likes || 0}
		</span>
		<span class="flex items-center gap-1">
			<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
				<path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"></path>
			</svg>
			{diary.commentsCount || 0}
		</span>
	</div>
</a>

<style>
	.diary-card:hover .line-clamp-3 {
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>
